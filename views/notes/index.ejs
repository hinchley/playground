<%- include('../partials/header.ejs') %>
<h1><%= title %></h1>

<%- include('../partials/nav.ejs', { isHome: true }) %>

<div id="main">
  <form method="GET">
    <input type="search" name="q" required value="<%= q %>"/>
    <input type="submit" value="Search" />
  </form>

  <ul>
  <% notes.forEach(note => { -%>
    <li><%= note.content %> <a href="/notes/<%= note.id %>">View</a></li>
  <% }); -%>
  </ul>
</div>
<%- include('../partials/pagination.ejs') %>
